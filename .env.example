# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/nesavent
MONGODB_TEST_URI=mongodb://localhost:27017/nesavent_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets
JWT_ACCESS_SECRET=your_super_secret_access_key_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=Nesavent <no-reply@nesavent.com>

# WhatsApp (Fonnte)
FONNTE_API_KEY=your_fonnte_api_key
FONNTE_URL=https://api.fonnte.com/send

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Midtrans
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID=your_merchant_id

# Sentry
SENTRY_DSN=your_sentry_dsn

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_key

# Campus Email Domain
CAMPUS_EMAIL_DOMAIN=@student.ac.id

# Payment
PAYMENT_EXPIRY_HOURS=24
PLATFORM_FEE_PERCENTAGE=3

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Timezone
DEFAULT_TIMEZONE=Asia/Jakarta
